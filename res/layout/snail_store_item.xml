<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="109dp"
    android:layout_height="109dp"
    android:clickable="true"
    android:focusable="true" >

    <ImageView
        android:id="@+id/store_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:duplicateParentState="true"
        android:src="@drawable/store_category_selector" />

    <TextView
        android:id="@+id/store_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="8dp"
        android:duplicateParentState="true"
        android:shadowColor="#7F000000"
        android:shadowRadius="5"
        android:text="@string/much_store_category_title"
        android:textColor="@color/store_title_selector"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/store_mes_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/snail_custom_badge_margin_right"
        android:layout_marginTop="@dimen/snail_custom_badge_margin_top"
        android:background="@drawable/snail_new_number_bg"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/store_title_selector"
        android:visibility="gone"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:background="@drawable/store_item_press_selector"
        android:duplicateParentState="true" />

</FrameLayout>